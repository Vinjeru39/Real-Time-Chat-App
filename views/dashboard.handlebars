<div id="main-container">
    <div id="left-side">

        <div class="menu" id="contact-menu">
            <div class="user-details">
                <img src={{userImage}} class="profile-img" />
                <h3>{{userName}}</h3>
            </div>
            <button><a href="/auth/logout">logout</a></button>
        </div>
        <div id="search">
            <input type="text" placeholder="Search" id="search-input" />
        </div>


        <div id="contacts">
            <ul class="contact-list">
                {{#each allUsers}}
                <li class="contact-item">
                    <a href="#{{../userId}}AND{{_id}}" class="contact-link user-details">
                        <img src={{image}} class="profile-img">
                        <p class="username">{{displayName}}</p>
                    </a>
                </li>

                {{/each}}

                {{!-- <li class="contact-item">
